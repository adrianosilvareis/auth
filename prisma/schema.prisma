generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model activities {
  id                     String                   @id @default(uuid())
  name                   String                   @unique
  permissions            String[]
  auth_groups            auth_groups[]
  auth_groups_activities auth_groups_activities[]
}

model auth_groups_activities {
  id             String       @id @default(uuid())
  activity       activities?  @relation(fields: [activity_id], references: [id])
  auth_group     auth_groups? @relation(fields: [auth_groups_id], references: [id])
  activity_id    String?
  auth_groups_id String?
}

model auth_groups {
  id                     String                   @id @default(uuid())
  title                  String
  activities             activities[]
  auth_groups_activities auth_groups_activities[]
}
