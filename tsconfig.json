{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false, // fix Vetur(1149)
    "target": "ES2019",
    "sourceMap": true,
    "removeComments": true, 
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": ["faker"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/node_modules",
    "packages/**/dist"
  ]
}